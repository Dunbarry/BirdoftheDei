<div class="mainContain">
  <h1>
    <a href='/'>Bird of the Dei</a>
  </h1>
  <span class="headerSpan">
    <p class="header">Mythological Birds and where to find them!</p>
  </span>
  <legend>
    <div class="legend">Tell us about your bird of the dei:</div>
  </legend>
  <form class="form-horizontal" action="/post/{{id}}/update" method="POST">
    <fieldset>
      <!-- <legend class="legend">Tell us about your bird of the dei:</legend> -->
      <div class="form-group">
        <label for="inputUsername" class="col-lg-2 control-label">Username:</label>
        <div class="col-lg-10">
          <input type="text" class="form-control" id="inputUsername" name="username" placeholder="{{user}}" readonly>
          {{id}}
        </div>
      </div>
      <div class="form-group">
        <label for="inputTitle" class="col-lg-2 control-label">Title:</label>
        <div class="col-lg-10">
          <input type="text" class="form-control" name="title" id="inputTitle" placeholder="{{title}}" readonly>
        </div>
      </div>
      <div class="form-group">
        <label for="textArea" class="col-lg-2 control-label">Post:</label>
        <div class="col-lg-10">
          <textarea class="form-control lineControl" rows="6" name="content" id="textArea">{{content}}</textarea>
          <span class="help-block">We agree, this version is much better!</span>
        </div>
      </div>
      <div class="form-group">
        <div class="col-lg-10 col-lg-offset-2">
          <button type="reset" class="btn btn-default">Cancel</button>
          <button type="submit" class="btn btn-primary" id="submit">Submit</button>
        </div>
      </div>
    </fieldset>
  </form>
</div>
